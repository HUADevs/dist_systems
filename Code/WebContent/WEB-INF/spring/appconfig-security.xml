<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:security="http://www.springframework.org/schema/security"
	xmlns:oauth="http://www.springframework.org/schema/security/oauth2"
	xsi:schemaLocation="http://www.springframework.org/schema/security http://www.springframework.org/schema/security/spring-security.xsd
		http://www.springframework.org/schema/security/oauth2 http://www.springframework.org/schema/security/spring-security-oauth2.xsd
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<security:authentication-manager alias="authenticationManager">
		<security:authentication-provider
			user-service-ref="userDetailsServiceImpl">
		</security:authentication-provider>
	</security:authentication-manager>

	<bean id="userDetailsServiceImpl" class="com.huaDevelopers.data.Services.UserDetailsServiceImpl" />

	<bean id="customAuthenticationSuccessHandler"
		class="com.huaDevelopers.controllers.CustomAuthenticationSuccessHandler" />

	<bean id="jwtService" class="com.huaDevelopers.data.Services.JwtService">
	</bean>

	<bean id="jwtAuthenticationFilter" class="com.huaDevelopers.JwtAuthenticationFilter">
		<property name="jwtService" ref="jwtService" />
	</bean>

	<bean id="restAuthenticationEntryPoint" class="com.huaDevelopers.RestAuthenticationEntryPoint">
	</bean>

	<security:http security="none" pattern="/resource/**" />

	<security:http pattern="/rest/login" security="none" />
	<security:http pattern="/rest/department/**" security="none" />
	<security:http pattern="/rest/insurance/calculate" security="none" />
	

	<security:http pattern="/rest/**" entry-point-ref="restAuthenticationEntryPoint"
		create-session="stateless">
		<security:csrf disabled="true" />
		<security:custom-filter before="FORM_LOGIN_FILTER"
			ref="jwtAuthenticationFilter" />
	</security:http>

	<security:http pattern="/**" auto-config="true"
		use-expressions="true">
		<security:csrf disabled="true" />
		<security:intercept-url pattern="/admin/**"
			access="hasAuthority('Admin')" />
		<security:intercept-url pattern="/cms/insurance/**"
			access="hasAnyAuthority('Add Insurance','Edit Insurance')" />
		<security:intercept-url pattern="/cms/damage/declare/**"
			access="hasAuthority('Declare Damage')" />
		<security:intercept-url pattern="/cms/damage/view"
			access="hasAuthority('Declare Damage')" />
		<security:intercept-url pattern="/cms/damage/damage/*/review"
			access="hasAnyAuthority('Damage Approval less than 300','Damage Approval 300-2000','Damage Approval more than 2000')" />
		<security:intercept-url pattern="/cms/**"
			access="hasAnyAuthority('Add Insurance','Edit Insurance','Declare Damage','Damage Approval less than 300','Damage Approval 300-2000','Damage Approval more than 2000')" />

		<security:intercept-url pattern="/" access="permitAll" />
		<security:form-login login-page="/login"
			authentication-success-handler-ref="customAuthenticationSuccessHandler"
			default-target-url="/welcome" authentication-failure-url="/login?error"
			username-parameter="username" password-parameter="password" />
		<security:logout logout-success-url="/login?logout"
			delete-cookies="JSESSIONID" invalidate-session="true" />
		<security:session-management
			session-fixation-protection="migrateSession" />
	</security:http>

</beans>
